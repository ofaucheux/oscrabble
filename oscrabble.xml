  <target name="compile.module.oscrabble" depends="compile.module.oscrabble.production,compile.module.oscrabble.tests" description="Compile module OScrabble"/>
  
  <target name="compile.module.oscrabble.production" description="Compile module OScrabble; production classes">
    <mkdir dir="${oscrabble.output.dir}"/>
    <javac destdir="${oscrabble.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.oscrabble}/javac">
      <compilerarg line="${compiler.args.oscrabble}"/>
      <bootclasspath refid="oscrabble.module.bootclasspath"/>
      <classpath refid="oscrabble.module.production.classpath"/>
      <src refid="oscrabble.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.oscrabble"/>
    </javac>
    
    <copy todir="${oscrabble.output.dir}">
      <fileset dir="${module.oscrabble.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.oscrabble.basedir}/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.oscrabble.tests" depends="compile.module.oscrabble.production" description="compile module OScrabble; test classes" unless="skip.tests">
    <mkdir dir="${oscrabble.testoutput.dir}"/>
    <javac destdir="${oscrabble.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.oscrabble}/javac">
      <compilerarg line="${compiler.args.oscrabble}"/>
      <bootclasspath refid="oscrabble.module.bootclasspath"/>
      <classpath refid="oscrabble.module.classpath"/>
      <src refid="oscrabble.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.oscrabble"/>
    </javac>
    
    <copy todir="${oscrabble.testoutput.dir}">
      <fileset dir="${module.oscrabble.basedir}/srcTest">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.oscrabble" description="cleanup module">
    <delete dir="${oscrabble.output.dir}"/>
    <delete dir="${oscrabble.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>

  <target name="jar" depends="build.modules">
    <jar basedir="${oscrabble.output.dir}" destfile="oscrabble.jar" manifest="${basedir}/build/MANIFEST.MF"/>
  </target>
  
  <target name="clean" depends="clean.module.oscrabble" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.oscrabble" description="build all modules"/>
  
  <target name="all" depends="jar" description="build all"/>
